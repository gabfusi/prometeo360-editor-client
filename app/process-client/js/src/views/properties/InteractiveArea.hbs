<div class="properties textarea">
    <form class="inner">

        <input type="hidden" name="id" value="{{id}}">

        <div class="col-sm-6">
            <div class="form-group">
                <label for="p_frame">Frame</label>
                <input type="text" id="p_frame" name="frame" value="{{ frame }}" class="form-control change-listener">
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group">
                <label for="p_duration">Durata</label>
                <input type="text" id="p_duration" name="duration" value="{{ duration }}" class="form-control change-listener">
            </div>
        </div>

        <div class="form-group">
            <label for="p_background">Sfondo</label>
            <input type="text" id="p_background" name="background" class="colorpicker form-control change-listener" value="{{ background }}">
        </div>

        <div class="form-group">
            <label for="p_linked_scene">Al click, vai alla scena:</label>
            <select id="p_linked_scene" name="linked_scene" class="form-control change-listener"></select>
        </div>

        <div class="form-group" id="linkedFrameBox">
            <label for="p_linkedframe">Al frame:</label>
            <input type="text" id="p_linkedframe" name="linked_scene_frame" value="{{ linkedSceneFrame }}" class="form-control change-listener">
        </div>

    </form>
</div>